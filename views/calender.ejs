<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <!-- ========== Start header ========== -->
<%-include("mainHeader.ejs")%>
<!-- ========== End header ========== -->
<div class="updates-section" id="bg-color-purple">
  <div class="header-programe" style="margin-top: 100px">
    <div class="container">
      <div class="updates-title">
        <h1>Calender</h1>
      </div>

      <!-- <div class="updates-menu">
        <ul>
          <li data-section="september" id="september">September</li>
          <li data-section="october" id="october">October</li>
          <li data-section="november" id="november">November</li>
          <li data-section="december" id="december">December</li>
        </ul>
      </div> -->
      <form id="monthForm" action="/calendar" method="POST">
        <input type="hidden" name="month" id="selectedMonth" value="">
      </form>

      <div class="updates-menu">
        <ul>
          <li data-month="September">September</li>
          <li data-month="October">October</li>
          <li data-month="November">November</li>
          <li data-month="December">December</li>
        </ul>
      </div>

      <% monthWiseData.forEach(monthData=> { %>
      <div class="calender-cards-items" data-month="<%= monthData.month %>">
        <div class="calender-cards">
          <h3><%= monthData.month %></h3>
          <% monthData.events.forEach(event=> { %>
          <p><%= event.date.getDate() %></p>
        </div>
        <div class="calender-desc">
          <p>One day Workshop on</p>
          <h2><%= event.title %></h2>
        </div>
        <div class="calender-chev">
          <a href="/event_single/<%= event._id %>">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="30"
              height="30"
              viewBox="0 0 19 19"
              fill="none"
            >
