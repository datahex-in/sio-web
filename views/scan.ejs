<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/jsqr@1.4.0/dist/jsQR.min.js"></script>
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f5f5f5;
        margin: 0;
      }

      #content {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 80%;
        width: 400px;
      }

      #qr-scanner-container {
        width: 100%;
        max-width: 400px;
        background-color: #000;
        border-radius: 10px;
        overflow: hidden;
      }

      #video {
        width: 100%;
        height: auto;
      }

      #start-button,
      #stop-button {
        margin: 10px;
        padding: 12px 24px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        border-radius: 32px;
        border: none;
        outline: none;
        cursor: pointer;
        transition: background-color 0.2s ease;
      }

      #start-button {
        background-color: green;
      }

      #stop-button {
        background-color: red;
        display: none;
      }

      #result {
        border-radius: 0 0 10px 10px;
        background-color: white;
        padding: 10px;
      }

      .instruction {
        background: rgba(255, 255, 255, 0.8);
        padding: 10px;
        border-radius: 10px 10px 0 0;
      }

      .select-container {
        text-align: left;
        margin: 10px;
      }

      select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
      }

      @media (max-width: 768px) {
        #content {
          width: 90%;
        }
      }
    </style>
  </head>
  <body>
    <div id="content">
      <div class="instruction">
        Select an event and mark the attendee by scanning the QR
      </div>
      <div class="select-container">
        <!-- Select dropdown for selecting an event -->
        <label for="event">Select an event:</label>
        <select id="event" required>
          <option value="" disabled selected>Select an event</option>
          <% events.forEach(item => { %>
            <option value="<%= item.title %>"><%= item.title %></option>
          <% }); %>
        </select>
      </div>
      <div id="qr-scanner-container">
        <video id="video" autoplay muted playsinline></video>
        <canvas id="qr-canvas" style="display: none"></canvas>
        <button id="start-button">Start Scanning</button>
        <button id="stop-button">Stop Scanning</button>
      </div>
      <div class="result" id="result"></div>
    </div>

    <script>
      const video = document.getElementById("video");
      const startButton = document.getElementById("start-button");
      const stopButton = document.getElementById("stop-button");
      const resultDiv = document.getElementById("result");
      let scanning = false;

      let selectedEvent = ""; // Variable to store the selected event

      const eventSelect = document.getElementById("event");
      eventSelect.addEventListener("change", () => {
        selectedEvent = eventSelect.value;
      });

      navigator.mediaDevices
        .getUserMedia({
          video: {
            facingMode: {
              exact: "environment",
            },
          },
        })
        .then((stream) => {
          video.srcObject = stream;
        })
        .catch((error) => {
          console.error("Error accessing camera:", error);
        });

      video.addEventListener("play", () => {
        const canvas = document.getElementById("qr-canvas");
        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;
        const ctx = canvas.getContext("2d");

        const startScanning = () => {
          scanning = true;
          startButton.style.display = "none";
          stopButton.style.display = "block";
          resultDiv.textContent = "Scanning...";

          const scan = () => {
            if (!scanning) return;

            ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
            const imageData = ctx.getImageData(
              0,
              0,
              canvas.width,
              canvas.height
            );
            const code = jsQR(
              imageData.data,
              imageData.width,
              imageData.height
            );

            if (code) {
              // QR code has been found
              const value = code.data;
              if (selectedEvent) {
                // Send value and selected event to the API endpoint
                fetch("/scan/validateqr", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify({ value, event: selectedEvent }),
                });
              } else {
                resultDiv.textContent = "Select an event first.";
              }
            }

            requestAnimationFrame(scan);
          };

          requestAnimationFrame(scan);
        };

        const stopScanning = () => {
          scanning = false;
          startButton.style.display = "block";
          stopButton.style.display = "none";
          resultDiv.textContent = "";
        };

        startButton.addEventListener("click", startScanning);
        stopButton.addEventListener("click", stopScanning);
      });
    </script>
  </body>
</html>
